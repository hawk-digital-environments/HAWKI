# =====================================================
# HAWKI - Development Environment Profile
# =====================================================
# This file contains ONLY the differences from .env.example
# for development deployment.
#
# All shared configuration is in .env.example
# =====================================================

# Environment
APP_ENV=local
APP_DEBUG=true
LOG_LEVEL=debug

# Project Configuration
PROJECT_NAME=hawki-dev
PROJECT_HAWKI_IMAGE=hawki:dev-local

# Docker Configuration
DOCKER_PROJECT_IP=0.0.0.0

# Nginx Configuration
NGINX_SERVER_NAME=app.hawki.dev
NGINX_ENABLE_IPV6=false
NGINX_HTTP_PORT=8080
NGINX_HTTPS_PORT=8443

# Reverb Configuration
REVERB_HOST=app.hawki.dev

# Docker User Mapping (auto-set by env-init.sh to current user)
# DOCKER_UID=501
# DOCKER_GID=1000

# Proxy Configuration (empty for local development)
DOCKER_HTTP_PROXY=
DOCKER_HTTPS_PROXY=
DOCKER_NO_PROXY=localhost,127.0.0.1
