# =====================================================
# HAWKI - Production Environment Profile
# =====================================================
# This file contains ONLY the differences from .env.example
# for production deployment.
#
# All shared configuration is in .env.example
# =====================================================

# Environment
APP_ENV=production
APP_DEBUG=false
LOG_LEVEL=error

# Project Configuration
PROJECT_NAME=hawki-prod
PROJECT_HAWKI_IMAGE=digitalenvironments/hawki:latest

# Docker Configuration
DOCKER_PROJECT_IP=0.0.0.0

# Queue Configuration
QUEUE_CONNECTION=redis

# Nginx Configuration
NGINX_SERVER_NAME=your-domain.com
NGINX_ENABLE_IPV6=true
NGINX_HTTP_PORT=80
NGINX_HTTPS_PORT=443

# Reverb Configuration
REVERB_HOST=your-domain.com

# Docker User Mapping (use www-data for production)
DOCKER_UID=33
DOCKER_GID=33

# Proxy Configuration (adjust for your network)
DOCKER_HTTP_PROXY=http://10.60.3.254:3128
DOCKER_HTTPS_PROXY=http://10.60.3.254:3128
DOCKER_NO_PROXY=localhost,127.0.0.1
