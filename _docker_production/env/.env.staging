# =====================================================
# HAWKI - Staging Environment Profile
# =====================================================
# This file contains ONLY the differences from .env.example
# for staging deployment.
#
# All shared configuration is in .env.example
# =====================================================

# Environment
APP_ENV=staging
APP_DEBUG=true
LOG_LEVEL=debug
LOG_CHANNEL=stack

# Project Configuration
PROJECT_NAME=hawki-staging
PROJECT_HAWKI_IMAGE=hawki:staging

# Docker Configuration
DOCKER_PROJECT_IP=0.0.0.0

# Database Configuration
DB_EXTERNAL_PORT=3307

# Queue Configuration
QUEUE_CONNECTION=redis

# Nginx Configuration
NGINX_SERVER_NAME=staging.hawki.dev
NGINX_ENABLE_IPV6=false
NGINX_HTTP_PORT=80
NGINX_HTTPS_PORT=443

# Reverb Configuration
REVERB_HOST=staging.hawki.dev

# Docker User Mapping (use www-data for staging)
DOCKER_UID=33
DOCKER_GID=33

# Proxy Configuration (adjust for your network)
DOCKER_HTTP_PROXY=http://10.60.3.254:3128
DOCKER_HTTPS_PROXY=http://10.60.3.254:3128
DOCKER_NO_PROXY=localhost,127.0.0.1,reverb